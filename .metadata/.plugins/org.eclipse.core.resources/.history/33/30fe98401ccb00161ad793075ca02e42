		/*
		 * 使用字符文件输入输出流的完成文件的复制
		 */
		Reader in = new FileReader("数据结构主观题.doc");
		Writer out = new FileWriter("2.doc");
		int len=0;
		char [] buffer =new char[1024*10];
		while((len=in.read(buffer))!=-1){
			out.write(buffer, 0, len);
		}
		in.close();
		out.close();
	}

}
