import java.awt.Container;
import java.awt.FlowLayout;
import java.awt.Label;

import javax.swing.JButton;
import javax.swing.JFrame;

//ctrl+shift+o 添加类
public class FirstDay extends JFrame {
	private JButton buttom1 = new JButton("太阳");
	private JButton buttom2 = new JButton("月亮");

	public FirstDay(String title) {
		// 继承父类的继承方法
		super(title);
		// int x,int y,width,height
		this.setBounds(10, 10, 200, 200);
		// 创建一块玻璃承载组件
		Container con = this.getContentPane();
		con.setLayout(new FlowLayout(5));
		con.add(buttom1);
		con.add(buttom2);
		Label a = new Label("你好，宇哥");
		con.add(a);
		this.setVisible(true);
		// this.setDefaultCloseOperation(HEIGHT);
	}
}
